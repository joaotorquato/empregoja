<%= form_for @job, html: { class: "form-horizontal" }  do |f| %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :title} do %>
  <%= f.text_field :title, class: "form-control" %>
<% end %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :location} do %>
  <%= f.text_field :location, class: "form-control" %>
<% end %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :company} do %>
  <%= f.collection_select :company_id, @companies, :id, :name, {}, class: "form-control" %>
<% end %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :category} do %>
  <%= f.collection_select :category_id, @categories, :id, :name, {}, class: "form-control" %>
<% end %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :featured} do %>
  <%= f.check_box :featured %>
<% end %>

<%= render layout: "jobs/field_helper", locals: {form: f, type_field: :description} do %>
  <%= f.text_area :description, class: "form-control" %>
<% end %>

<%= f.submit submit_text, :class => 'btn btn-default pull-right' %>
<% end %>
