<h2><%= @job.title %></h2>
<hr>
<div class="row">
  <div class="col-md-3"><strong>Categoria:</strong></div>
  <div class="col-md-3"><%= @job.category.name %></div>
</div>
<div class="row">
  <div class="col-md-3"><strong>Empresa:</strong></div>
  <div class="col-md-3"><%= @job.company.name%></div>
</div>
<div class="row">
  <div class="col-md-3"><strong>Descrição Completa:</strong></div>
  <div class="col-md-3"><%= @job.description %></div>
</div>
<div class="row">
  <div class="col-md-3"><strong>Localização:</strong></div>
  <div class="col-md-3"><%= @job.location %></div>
</div>
<div class="row">
  <div class="col-md-3">
    <% if @job.featured? %>
    <strong>Vaga em Destaque</strong>
    <% end %>
  </div>
</div>
